<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:xmls="http://schemas.android.com/tools"
    xmls:res="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="10sp"
        app:cardElevation="20sp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eventImage_user_registered_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/common_google_signin_btn_icon_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eventName_user_registered_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                app:layout_constraintBottom_toTopOf="@+id/eventVenue"
                app:layout_constraintStart_toStartOf="@+id/eventImage"
                app:layout_constraintTop_toBottomOf="@+id/eventImage" />

            <TextView
                android:id="@+id/eventVenue_user_registered_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Venue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventName_user_registered_to" />

            <TextView
                android:id="@+id/eventDate_user_registered_to"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="216dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eventDescription_user_registered_to"
                app:layout_constraintTop_toBottomOf="@+id/eventEndTime_user_registered_to"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/eventStartTime_user_registered_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Start Time"
                app:layout_constraintBottom_toBottomOf="@+id/eventImage_user_registered_to"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/eventImage_user_registered_to" />

            <TextView
                android:id="@+id/eventEndTime_user_registered_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="8dp"
                android:text="End Time"
                app:layout_constraintStart_toStartOf="@+id/eventStartTime_user_registered_to"
                app:layout_constraintTop_toBottomOf="@+id/eventStartTime_user_registered_to" />

            <TextView
                android:id="@+id/eventDescription_user_registered_to"
                android:layout_width="150dp"
                android:layout_height="41dp"
                android:layout_marginTop="8dp"
                android:text="DESCRIPTION"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventVenue_user_registered_to" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>